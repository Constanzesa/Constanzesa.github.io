<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title or site.title }}</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="site-header">
    <div class="container">
      <h1 class="site-title"><a href="/">{{ title or site.title }}</a></h1>
      <nav class="site-nav">
        {% if site.social.github %}<a href="{{ site.social.github }}">GitHub</a>{% endif %}
        {% if site.social.twitter %} | <a href="{{ site.social.twitter }}">Twitter</a>{% endif %}
      </nav>
    </div>
  </header>

  <main class="container content">
    {{ content | safe }}
  </main>

  <footer class="site-footer container">
    <p>Â© {{ "now" | date("YYYY") }} {{ site.author }}</p>
  </footer>
</body>
</html>
